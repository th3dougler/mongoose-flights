<%- include('../partials/head') %>
<div class="container">
  <div class="row">
    <%array.forEach(entry=>{ %>
      <div class="col s12 m4 l3">
    <div class="card center medium">
      <div class="card-content">
        <span class="lighten-1"><h3><%= entry.airline %></h3></span>
        <span class="card-title"><h2><%= entry.airport %></h2></span>
        <ul>
          <li>Flight No:<%= entry.flightNo%></li>
           <% let colour =  (entry.departs.getFullYear() < new Date().getFullYear())?  "red" : "black" %> 
          <li style="color: <%= colour %> " >Departs: <%= new Date(entry.departs).toDateString()%></li>
        </ul>
      </div>
      <div class="card-action">
        <a class="btn" href="/flights/<%= entry._id %>">Detail</a>
      </div>
    </div>
  </div>
    <% }) %>
  </div>
</div>
<%- include('../partials/foot') %>
